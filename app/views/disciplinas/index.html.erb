<h2><i class="fa fa-pencil"></i> &nbsp;Disciplinas do curso de <strong><%= @curso.nome %></strong></h2>
<hr>
<% if notice %>
    <div class="alert alert-success fill">
      <button type="button" class="close" data-dismiss="alert">
        ×
      </button>
      <%= notice %>
    </div>
<% end %>
<p>
  <%= link_to 'Adicionar Disciplina', new_curso_disciplina_path(@curso), class: 'btn btn-primary' %>
</p>
<% if @disciplinas.any? %>
    <table class="table table-hover" style="margin-top: 10px">
      <thead>
      <tr>
        <th>Nome</th>
        <th>Professor</th>
        <th class="text-center" width="70"><i class="fa fa-cogs"></i></th>
      </tr>
      </thead>

      <tbody>
      <% @disciplinas.each do |disciplina| %>
          <tr>
            <td><%= disciplina.nome %></td>
            <td><%= disciplina.professor.nome %></td>
            <td class="text-center">
              <div class="dropdown">
                <a class="btn btn-xs btn-default" data-toggle="dropdown">
                  <i class="fa fa-cog"></i><span class="caret"></span>
                </a>
                <ul class="dropdown-menu text-left">
                  <li role="presentation"><%= link_to edit_curso_disciplina_path(@curso, disciplina) do %>
                        <i class="fa fa-edit"></i> Editar
                    <% end %></li>
                  <li role="presentation"><%= link_to curso_disciplina_path(@curso, disciplina), method: :delete, data: {confirm: 'Deseja realmente remover esta disciplina?'} do %>
                        <i class="fa fa-trash-o"></i> Remover
                    <% end %></li>
                </ul>
              </div>


            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <div class="alert alert-info">
      Parece que ainda não existe nenhuma disciplina cadastrada para este curso.
    </div>
<% end %>