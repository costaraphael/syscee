<h2><i class="fa fa-calendar"></i> &nbsp;Reservas solicitadas</h2>
<hr>
<% if notice %>
    <div class="alert alert-success fill">
        <button type="button" class="close" data-dismiss="alert">
            ×
        </button>
        <%= notice %>
    </div>
<% end %>
<% if @reservas.any? %>
    <table class="table table-hover" style="margin-top: 10px">
        <thead>
        <tr>
            <th>Espaço</th>
            <th>Início</th>
            <th>Fim</th>
            <th>Situação</th>
        </tr>
        </thead>

        <tbody>
        <% @reservas.each do |reserva| %>
            <tr>
                <td><%= reserva.espaco.nome %></td>
                <td><%= reserva.inicio.strftime('%d/%m/%Y às %H:%M') %></td>
                <td><%= reserva.fim.strftime('%d/%m/%Y às %H:%M') %></td>
                <td><%=
                    case reserva.status
                      when 1 then
                        'Em espera'
                      when 2 then
                        'Aprovada'
                      when 3 then
                        'Negada'
                    end
                %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
<% else %>
    <div class="alert alert-info">
        Parece que nenhuma reserva foi efetuada ainda.
    </div>
<% end %>